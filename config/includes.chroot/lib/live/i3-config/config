# start application
exec --no-startup-id feh --bg-fill ~/.i3/background.bmp
#exec --no-startup-id conky -d -c ~/.i3/conkybg
exec --no-startup-id conky -d -c ~/.i3/conky-left
#exec --no-startup-id conky -d -c ~/.i3/conky-bottom
